{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/opengeospatial/TrainingDML-AI_SWG/blob/main/use-cases/examples/1.0/TrainingDML-AI_JSON_Schema/date_time.json",
    "oneOf": [
        {
            "type": "string",
            "format": "date-time"
        },
        {
            "type": "string",
            "format": "date"
        },
        {
            "type": "string",
            "format": "time"
        },
        {
            "type": "string",
            "pattern": "^(19|20)\\d{2}$"
        },
        {
            "type": "string",
            "pattern": "^(19|20)\\d{2}-(0[1-9]|1[0-2])$"
        }
    ]
}