{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.0/json_schema/md_scope.json",
    "title": "MD_Scope",
    "type": "object",
    "required": [
        "level"
    ],
    "properties": {
        "level": {
            "type": "string"
        },
        "extent": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4
        },
        "levelDescription": {
            "type": "object",
            "required": [
                "dataset"
            ],
            "properties": {
                "dataset": {
                    "type": "string"
                },
                "features": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}