{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.0/json_schema/md_band.json",
    "title": "MD_Band",
    "type": "object",
    "properties": {
        "boundMax": {
            "type": "number"
        },
        "boundMin": {
            "type": "number"
        },
        "boundUnits": {
            "type": "string",
            "enum": [
                "nm",
                "um",
                "cm",
                "dm",
                "m",
                "km"
            ]
        },
        "peakResponse": {
            "type": "number"
        },
        "toneGradation": {
            "type": "integer"
        }
    },
    "dependentRequired": {
        "boundMax": [
            "boundUnits"
        ],
        "boundMin": [
            "boundUnits"
        ]
    }
}